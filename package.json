{
  "name": "react-ts-migration-utils",
  "version": "1.0.0",
  "description": "Utilities to help migrate legacy React JS projects to TypeScript",
  "author": "Manuel del Pozo",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/manueldelpozo/react-ts-migration-utils.git"
  },
  "keywords": [
    "react",
    "typescript",
    "migration",
    "utils",
    "prop-types"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "playground:dev": "npm --prefix ./examples/playground run dev",
    "playground:build": "npm --prefix ./examples/playground run build",
    "playground:preview": "npm --prefix ./examples/playground run preview"
  },
  "devDependencies": {
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.2.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16.8"
  }
}